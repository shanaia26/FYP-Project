<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_sticker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/circle"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:alpha="0.85"
        android:translationX="95dp"
        android:translationY="80dp"
        app:srcCompat="@drawable/logo_white" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="arial"
        android:text="WELCOME BACK"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:translationX="110dp"
        android:translationY="330dp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:translationX="105dp"
        android:translationY="370dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="  Email:"
        android:inputType="textPersonName"
        android:textColorHint="@color/black_60"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white_80"
        android:translationX="55dp"
        android:translationY="400dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="  Password:"
        android:inputType="textPassword"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white_80"
        android:textColorHint="@color/black_60"
        android:translationX="55dp"
        android:translationY="470dp" />


    <Button
        android:id="@+id/login_button"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/gradient"
        android:text="LOG IN"
        android:textColor="@color/white_80"
        android:textSize="18sp"
        android:textStyle="bold"
        android:translationX="55dp"
        android:translationY="540dp"
        app:backgroundTint="@color/colorTranslucent" />

    <TextView
        android:id="@+id/failed_login"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:fontFamily="sans-serif"
        android:textColor="@color/white_60"
        android:text="Forgot username or password?"
        android:textSize="15sp"
        android:translationX="100dp"
        android:translationY="605dp" />

    <TextView
        android:id="@+id/register_account"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:fontFamily="sans-serif"
        android:textColor="@color/white_60"
        android:text="Register?"
        android:textSize="15sp"
        android:translationX="180dp"
        android:translationY="630dp" />

</RelativeLayout>