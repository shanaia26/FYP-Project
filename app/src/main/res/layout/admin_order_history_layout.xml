<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/admin_order_shipment_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Shipment Status"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/admin_order_order_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Order ID"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <View
                android:id="@+id/divider_line1"
                style="@style/Divider"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/admin_order_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|start"
                android:text="User Name"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/admin_order_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_alignParentRight="true"
                android:text="Phone Number"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/admin_order_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Address"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"/>

            <View
                android:id="@+id/divider_line2"
                style="@style/Divider"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/admin_order_payment_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Payment Status"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/admin_order_total_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Total Amount"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"/>

            <Button
                android:id="@+id/admin_show_products_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Show Products Ordered"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/button_background"/>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>