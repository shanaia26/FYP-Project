<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".CustomerEnquiries.CustomerUploadEnquiryActivity">

    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:text=" Upload Design"
            android:textColor="@color/colorPrimary"
            android:textSize="22dp"
            android:textAllCaps="true"
            android:drawableLeft="@drawable/file_icon"/>

    </LinearLayout>

    <TextView
        android:id="@+id/slogan_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar"
        android:layout_marginTop="10dp"
        android:text=" Don't see a design you like?"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:fontFamily="@font/rock_salt"/>

    <TextView
        android:id="@+id/slogan_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/slogan_text1"
        android:layout_marginTop="2dp"
        android:text=" Send A Photo of Your Design and Get a Price Estimate"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:textAllCaps="true"/>

    <ImageView
        android:id="@+id/customer_product_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/slogan_text2"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="120dp"
        android:src="@drawable/add_photo_icon" />

    <EditText
        android:id="@+id/customer_product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_product_image"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_background"
        android:hint="Product Description:"
        android:padding="12dp"
        android:elevation="10dp"/>

    <EditText
        android:id="@+id/customer_product_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_product_description"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_background"
        android:hint="Product Size:"
        android:padding="12dp"
        android:elevation="10dp"/>

    <EditText
        android:id="@+id/customer_product_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_product_size"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_background"
        android:hint="Any Notes:"
        android:padding="12dp"
        android:elevation="10dp"/>

    <Button
        android:id="@+id/customer_upload_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_background"
        android:text="Upload Design"
        android:textColor="@color/colorPrimary"/>


</RelativeLayout>