<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    tools:context=".ResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/reset_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/dripping_marker"
            android:text="Reset Password"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp" />



    </RelativeLayout>

    <EditText
        android:id="@+id/find_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_layout"
        android:background="@drawable/text_background"
        android:padding="12dp"
        android:hint="Please enter your phone number..."
        android:inputType="number"/>

    <TextView
        android:id="@+id/security_questions_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/find_phone_number"
        android:text="Answer The Following Security Questions"
        android:textStyle="bold"
        android:textSize="26dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/security_questions_title"
        android:background="@drawable/text_background"
        android:padding="12dp"
        android:hint="What is your favourite colour?"
        android:elevation="10dp"/>

    <EditText
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@id/question_1"
        android:background="@drawable/text_background"
        android:padding="12dp"
        android:hint="Who's your favourite superhero?"
        android:elevation="10dp"/>

    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_background"
        android:text="Verify Account"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>

</RelativeLayout>