<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_sticker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/circle"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:translationX="115dp"
        android:translationY="20dp"
        app:srcCompat="@drawable/logo_white" />

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="WELCOME BACK"
        android:textColor="@color/black_60"
        android:textSize="30sp"
        android:textStyle="bold"
        android:translationX="95dp"
        android:translationY="340dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:translationX="65dp"
        android:translationY="390dp"
        app:srcCompat="@drawable/rounded_tab" />

    <EditText
        android:id="@+id/email"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Email:"
        android:textColorHint="@color/black_60"
        android:translationX="85dp"
        android:translationY="405dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:translationX="65dp"
        android:translationY="455dp"
        app:srcCompat="@drawable/rounded_tab" />

    <EditText
        android:id="@+id/password"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password:"
        android:inputType="textPassword"
        android:textColorHint="@color/black_60"
        android:translationX="85dp"
        android:translationY="470dp" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="sans-serif-medium"
        android:text="LOG IN"
        android:textSize="15sp"
        android:translationX="125dp"
        android:translationY="535dp"
        app:backgroundTint="@color/black" />

    <EditText
        android:id="@+id/error_text"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="textPersonName"
        android:text="Forgot username or password?"
        android:textSize="15sp"
        android:translationX="100dp"
        android:translationY="580dp" />

    <EditText
        android:id="@+id/register"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Register?"
        android:textSize="15sp"
        android:translationX="180dp"
        android:translationY="610dp" />


</RelativeLayout>